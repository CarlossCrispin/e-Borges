#registrar.modal.fade(role='dialog')
    .modal-dialog
        // Modal content
        .modal-content
            .modal-header(style='padding:40px 50px;')
                button.close(type='button', data-dismiss='modal') Ã—
                h4
                span.i.fa.fa-pencil-alt
                |  Registrar Departamento
            .modal-body
                .panel.panel-default
                    .panel-heading
                        h3.panel-title Departamento
                    br
                    .panel-body
                        form.form-horizontal(name='myFormReg', novalidate='')
                            //- {{newDepartamento}}
                            .form-group
                                label.col-md-3.control-label Especialidad
                                .col-md-8.inputGroupContainer
                                    .input-group
                                        .input-group-addon
                                            span.i.fas.fa-transgender-alt

                                        input.form-control(name='especialidad', placeholder='especialidad', type='text', ng-model='new.especialidad', required, ng-maxlength="50" )
                                        
                                            
                                    span(style='color:red', ng-show='myFormReg.especialidad.$invalid && myFormReg.especialidad.$touched')
                                        span(ng-show='myFormReg.especialidad.$error.required') ingresa especialidad.
                                        span(ng-show='myFormReg.especialidad.$error.maxlength') maximo 50.
                                        span.errorMes {{errorMes}}
                                        span.errorMes {{errorMess}}

                  
                        
                    
                    .panel-footer.text-right
                        hr
                        button.btn.btn-success(type='button', ng-click='save();',data-dismiss='modal', 
                            ng-disabled=`myFormReg.especialidad.$invalid `)
                            span.i.fas.fa-check
                            |  Registrar
                        
                        button.btn.btn-danger(data-dismiss='modal' ,ng-click='get()')
                            span.i.fas.fa-times
                            |  Cerrar
                        