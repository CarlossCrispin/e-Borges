#editar.modal.fade(role='dialog')
    .modal-dialog
        // Modal content
        .modal-content
            .modal-header
                button.close(type='button', data-dismiss='modal') ×
                h4.modal-title
                    span.i.fa.fa-edit
                    |  Editar Genero
            .modal-body
                .panel.panel-default
                    .panel-heading
                        h3.panel-title Genero
                    br
                    form.form-horizontal(name='myFormEdit', novalidate='')
                        .form-group
                            label.col-md-4.control-label Nombre Genero :
                            .col-md-7.inputGroupContainer
                                .input-group
                                    span.input-group-addon
                                        span.i.fas.fa-transgender-alt
                                    input.form-control(name='genero',type='text', ng-model='clickedUser.genero', required, ng-maxlength="50")
                                span(style='color:red', ng-show='myFormEdit.genero.$invalid')
                                    span(ng-show='myFormEdit.genero.$error.required') ingresa genero.
                                    span(ng-show='myFormEdit.genero.$error.maxlength') Muy largo.
                    
                    .panel-footer.text-right 
                        hr   
                        button.btn.btn-success(type='button', ng-click='updateUser(clickedUser)', data-dismiss='modal') 
                            span.i.fas.fa-sync-alt
                            |  Atualizar
                        button.btn.btn-danger(type='button', data-dismiss='modal',ng-click='recupera()') 
                            span.i.fas.fa-times
                            |  Cerrar
                        
