 
#registrar.modal.fade(role='dialog')
    .modal-dialog
        // Modal content
        .modal-content
            .modal-header(style='padding:40px 50px;')
                button.close(type='button', data-dismiss='modal') Ã—
                h4
                span.i.fa.fa-pencil-alt
                |  Registrar Acta
            .modal-body
                
                form(class="well form-horizontal" action='/acta/acta' method='post' autocomplete='off' )
                    .form-group
                        input#opc.form-control(required type='text' name='opc'  value='1' style="display:none")
                    //- .form-group
                    //-     label.col-md-4.control-label Tesis
                    //-     .col-md-8.inputGroupContainer
