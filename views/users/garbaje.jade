        | Name : 
        input(type='text', ng-model='name')
      h1 Hello {{name}}

    p Select a car:
    select(ng-model='selectedCar', ng-options='x for (x, y) in cars')
    h1 You selected: {{selectedCar.brand}}
    h2 Model: {{selectedCar.model}}
    h3 Color: {{selectedCar.color}}
   
