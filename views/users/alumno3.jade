                                    |                 
                                    .form-group.row
                                        label.col-sm-2.col-form-label(for='inputPhoto') Photo URL
                                        |                   
                                        .col-sm-10
                                        input.form-control(type='url', ng-model='photo2', placeholder='http://www.abc.com/uploads/photo.jpg', required='')
                                    |                 
                                    .form-group.row
                                        label.col-sm-2.col-form-label(for='inputQuote') Quote
                                        |                   
                                        .col-sm-10
                                        textarea.form-control(ng-model='quote2', placeholder='Lorem ipsum...', required='')
                                    |               
                                .modal-footer
                                    button.btn.btn-danger(type='button', data-dismiss='modal') Cancel
                                    |                 
                                    input.btn.btn-primary(type='submit', value='Update')
                // Modal
                #viewModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')
                    .modal-dialog(role='document')
                        .modal-content.text-center
                            .row
                                .col-md-12
                                    .cover
                                        .c-overlay
