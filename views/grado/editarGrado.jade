#editar.modal.fade(role='dialog')
    .modal-dialog
        // Modal content
        .modal-content
            .modal-header
                button.close(type='button', data-dismiss='modal') Ã—
                h4.modal-title
                    span.i.fa.fa-edit
                    |  Editar Grado
            .modal-body
                .panel.panel-default
                    .panel-heading
                        h3.panel-title Grado
                    br
                    form.form-horizontal(name='myFormEdit', novalidate='')
                        .form-group
                            label.col-md-4.control-label Nombre grado :
                            .col-md-7.inputGroupContainer
                                .input-group
                                    span.input-group-addon
                                        span.i.fas.fa-user-graduate
                                    input.form-control(name='grado',type='text', ng-model='clicked.grado', required, ng-maxlength="50")
                                span(style='color:red', ng-show='myFormEdit.grado.$invalid')
                                    span(ng-show='myFormEdit.grado.$error.required') ingresa grado.
                                    span(ng-show='myFormEdit.grado.$error.maxlength') Muy largo.
                    
                    .panel-footer.text-right 
                        hr   
                        button.btn.btn-success(type='button', ng-click='update(clicked)', data-dismiss='modal') 
                            span.i.fas.fa-sync-alt
                            |  Atualizar
                        button.btn.btn-danger(type='button', data-dismiss='modal',ng-click='get()') 
                            span.i.fas.fa-times
                            |  Cerrar