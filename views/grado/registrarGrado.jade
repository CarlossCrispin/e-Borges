
#registrar.modal.fade(role='dialog')
    .modal-dialog
        // Modal content
        .modal-content
            .modal-header(style='padding:40px 50px;')
                
                button.close(type='button', data-dismiss='modal') Ã—
                h4
                span.i.fa.fa-pencil-alt
                |  Registrar Grado
            .modal-body
                .panel.panel-default
                    .panel-heading
                        h3.panel-title Grado
                    br
                
                    form.form-horizontal(name='myFormReg', novalidate='')
                        .form-group
                            label.col-md-4.control-label Nombre grado :
                            .col-md-7.inputGroupContainer
                                .input-group
                                    span.input-group-addon
                                        span.i.fas.fa-user-graduate
                                    input.form-control(name="grado", type='text', placeholder='grado', ng-model='new.grado', required, ng-maxlength="50")
                                span(style='color:red', ng-show='myFormReg.grado.$invalid && myFormReg.grado.$touched')
                                    span(ng-show='myFormReg.grado.$error.required') ingresa grado.
                                    span(ng-show='myFormReg.grado.$error.maxlength') Muy largo.
                                
                     
                        .panel-footer.text-right
                            hr
                            button.btn.btn-success(type='button', ng-click='save()',data-dismiss='modal', ng-disabled="myFormReg.grado.$invalid" )
                                span.i.fas.fa-check
                                |  Registrar
                            button.btn.btn-danger(data-dismiss='modal' ,ng-click='recupera()')
                                span.i.fas.fa-times
                                |  Cerrar
                            
                        


                    

  