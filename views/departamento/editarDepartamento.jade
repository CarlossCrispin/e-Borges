
#editar.modal.fade(role='dialog')
    .modal-dialog
        // Modal content
        .modal-content
            .modal-header(style='padding:40px 50px;')
                button.close(type='button', data-dismiss='modal') Ã—
                h4
                span.i.fa.fa-pencil-alt
                |  Editar Departamento
            .modal-body
                .panel.panel-default
                    .panel-heading
                        h3.panel-title Departamento
                    br
                    .panel-body
                        form.form-horizontal(name='myFormEdit', novalidate='')
                            //- {{clickedDepartamento}}
                        
                            .form-group
                                label.col-md-3.control-label Departamento 
                                .col-md-8.inputGroupContainer
                                    .input-group
                                        span.input-group-addon
                                            span.i.fas.fa-vector-square
                                        input.form-control(name='departamento', placeholder='Departamento', type='text', ng-model='clickedDepartamento.departamento', required, ng-maxlength="50" )
                                        
                                            
                                    span(style='color:red', ng-show='myFormEdit.departamento.$invalid && myFormEdit.departamento.$touched')
                                        span(ng-show='myFormEdit.departamento.$error.required') ingresa departamento.
                                        span(ng-show='myFormEdit.departamento.$error.maxlength') maximo 50.
                                        span.errorMes {{errorMes}}
                                        span.errorMes {{errorMess}}
                            .form-group
                                label.col-md-3.control-label Especialidad
                                .col-md-8.inputGroupContainer
                                    .input-group
                                        .input-group-addon
                                            span.i.fas.fa-vector-square
                                        .inputGroupContainer  
                                            select.btn.btn-default.col-md-12(name="especialidad", ng-model='clickedDepartamento.idespecialidad',required )
                                                //- option(style='display:none', value='') elige especialidad ....    
                                                option( ng-repeat='x  in especialidad', value='{{x.idespecialidad}}', ng-selected='x.especialidad === clickedDepartamento.especialidad ' ) {{x.especialidad}}
                                            span.input-group-text(style='color:red', ng-show='myFormEdit.especialidad.$invalid && myFormEdit.especialidad.$touched' )
                                                span(ng-show='myFormEdit.especialidad.$error.required')     
                                                    | ingresa especialidad.
                                    
                                       
                    
                    .panel-footer.text-right
                        hr
                        button.btn.btn-success(type='button', ng-click='updateDepartamento(clickedDepartamento)',data-dismiss='modal', 
                            ng-disabled=`myFormEdit.departamento.$invalid && myFormEdit.especialidad.$invalid` )
                            span.i.fas.fa-sync-alt
                            |  Atualizar
                        button.btn.btn-danger(data-dismiss='modal' ,ng-click='get()')
                            span.i.fas.fa-times
                            |  Cerrar
                        