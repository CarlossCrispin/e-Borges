 
#editarDepartamento.modal.fade(role='dialog')
    .modal-dialog
        // Modal content
        .modal-content
            .modal-header(style='padding:40px 50px;')
                button.close(type='button', data-dismiss='modal') Ã—
                h4
                span.i.fa.fa-pencil-alt
                |  Editar Departamento
            .modal-body
                
                form(class="well form-horizontal" action='/departamento/departamento' method='post' autocomplete='off' )
                    .form-group
                        input#opc.form-control(required type='text' name='opc'  value='3' style="display:none")
                        input#ID.form-control(required type='text' name='editar' style="display:none")
                        label.col-md-3.control-label Departamento
                        .col-md-9.inputGroupContainer
                            .input-group
                                span.input-group-addon
                                    span.i.fas.fa-vector-square
                                input#val.form-control(name='departamento', placeholder='departamento', type='text' required)
                    .form-group
                        label.col-md-3.control-label Especialidad
                        .col-md-9.inputGroupContainer
                            .input-group
                                span.input-group-addon
                                    span.i.fas.fa-flask
                                select#select1.form-control(name="especialidad"  class="form-control" data-style="btn-info" required)
                                    option(value='', disabled='', selected='') Elija una opcion
                                    each item, i in items2
                                        option(value=item.id) #{item.especialidad}
                    
                    hr
                    .form-group
                        .col-md-2
                        .col-md-3
                    
                            button.btn.btn-success(type='submit' name="registro")
                                span.i.fas.fa-sync-alt
                                |  Atualizar
                        .col-md-2
                        .col-md-3
                            button.btn.btn-danger(type='submit', data-dismiss='modal')
                                span.i.fas.fa-times
                                |  Cerrar
                        .col-md-2
